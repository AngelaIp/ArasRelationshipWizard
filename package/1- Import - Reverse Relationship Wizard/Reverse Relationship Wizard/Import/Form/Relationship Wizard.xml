			function clearPassed()
			{	
				//Get all items
				grid = document.MyGrid;
				
				var rowId, rowIds = grid.getAllItemIds(';').split(';');
			    if (rowIds.length == 0) return;
			    for (var i = 0; i < rowIds.length; i++)
